{
  "text": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Advanced Flight Simulator Cockpit</title>\n    <script src=\"https://cdn.tailwindcss.com\"></script>\n    <script src=\"https://cdn.jsdelivr.net/npm/chart.js\"></script>\n    <style>\n        .annunciator-on { filter: brightness(1.5); }\n        .annunciator-off { filter: brightness(0.3); }\n        .glass-panel { background: #1e293b; box-shadow: inset 0 0 30px rgba(0,0,0,0.5); }\n        .tape-scale { display: flex; justify-content: flex-end; padding-right: 20px; background: linear-gradient(to right, #1e293b, #334155); }\n        .tape-tick { height: 4px; width: 1px; background: #cbd5e1; }\n        .tape-tick-large { height: 8px; width: 2px; background: #f1f5f9; }\n        .nav-display { background: #0f172a; border: 2px solid #334155; }\n        .button-blue { background: #3b82f6; }\n        .button-red { background: #ef4444; }\n        .button-black { background: #1e293b; border: 2px solid #64748b; }\n        .button-blue:hover { background: #2563eb; }\n        .button-red:hover { background: #dc2626; }\n        .key { background: #111827; border: 2px solid #64748b; color: #f1f5f9; }\n        .key:hover { background: #334155; }\n        [data-heading] { display: inline-block; transform-origin: center center; }\n        .warning-text { color: #ef4444; font-weight: bold; text-shadow: 0 0 8px #ef4444; }\n        .caution-text { color: #f59e0b; font-weight: bold; text-shadow: 0 0 8px #f59e0b; }\n    </style>\n</head>\n<body class=\"bg-gray-900 text-white\" style=\"font-family: 'Courier New', monospace;\">\n    <div class=\"container mx-auto px-4 py-4\">\n        <!-- Primary Flight Display -->\n        <div class=\"grid grid-cols-2 gap-4 mb-4\">\n            <!-- AOA -->\n            <div class=\"glass-panel rounded-2xl p-6 relative h-80\">\n                <h2 class=\"text-xl font-bold mb-4\">Angle of Attack</h2>\n                <canvas id=\"aoaGauge\" width=\"300\" height=\"200\"></canvas>\n                <div id=\"aoaValue\" class=\"absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-4xl font-bold text-center\">12°</div>\n            </div>\n            <!-- EGT/Temp -->\n            <div class=\"glass-panel rounded-2xl p-6 relative h-80\">\n                <h2 class=\"text-xl font-bold mb-4\">Engine Temp</h2>\n                <canvas id=\"tempGauge\" width=\"300\" height=\"200\"></canvas>\n                <div id=\"tempValue\" class=\"absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-4xl font-bold text-center\">450°C</div>\n            </div>\n        </div>\n        <!-- Main Display Grid -->\n        <div class=\"grid grid-cols-3 gap-4 mb-4\">\n            <!-- Primary Flight Display (PFD) -->\n            <div class=\"glass-panel rounded-2xl p-6 relative h-144\">\n                <h2 class=\"text-xl font-bold mb-4\">Primary Flight Display</h2>\n                <div class=\"relative h-96\">\n                    <svg viewBox=\"0 0 300 300\" class=\"absolute inset-0 m-auto\">\n                        <!-- Horizon -->\n                        <line x1=\"0\" y1=\"150\" x2=\"300\" y2=\"150\" stroke=\"#374151\" stroke-width=\"60\" />\n                        <line x1=\"0\" y1=\"120\" x2=\"300\" y2=\"120\" stroke=\"#94a3b8\" stroke-width=\"1\" />\n                        <line x1=\"0\" y1=\"180\" x2=\"300\" y2=\"180\" stroke=\"#94a3b8\" stroke-width=\"1\" />\n                        <line x1=\"0\" y1=\"90\" x2=\"300\" y2=\"90\" stroke=\"#94a3b8\" stroke-width=\"1\" />\n                        <line x1=\"0\" y1=\"210\" x2=\"300\" y2=\"210\" stroke=\"#94a3b8\" stroke-width=\"1\" />\n                        \n                        <!-- Aircraft Symbol -->\n                        <polygon points=\"150,145 140,165 150,160 160,165\" fill=\"#10b981\" stroke=\"#111827\" stroke-width=\"2\" />\n                        <line x1=\"135\" y1=\"160\" x2=\"165\" y2=\"160\" stroke=\"#10b981\" stroke-width=\"3\" />\n                        \n                        <!-- Attitude bars -->\n                        <rect x=\"110\" y=\"120\" width=\"160\" height=\"2\" fill=\"#f1f5f9\" />\n                        <rect x=\"90\" y=\"120\" width=\"20\" height=\"2\" fill=\"#f1f5f9\" />\n                        <rect x=\"210\" y=\"120\" width=\"20\" height=\"2\" fill=\"#f1f5f9\" />\n                        <rect x=\"70\" y=\"120\" width=\"20\" height=\"2\" fill=\"#f1f5f9\" />\n                        <rect x=\"230\" y=\"120\" width=\"20\" height=\"2\" fill=\"#f1f5f9\" />\n                    </svg>\n                    \n                    <!-- Roll angle -->\n                    <div id=\"rollValue\" class=\"absolute top-4 left-4 text-2xl\">Roll: 0°</div>\n                    <div id=\"pitchValue\" class=\"absolute top-4 right-4 text-2xl\">Pitch: 0°</div>\n                    \n                    <!-- Bank indicator -->\n                    <div style=\"transform: rotate(30deg)\" class=\"absolute top-16 left-1/2 transform -translate-x-1/2\">\n                        <div class=\"w-40 h-1 bg-white\"></div>\n                        <div class=\"w-20 h-1 bg-white -ml-10\"></div>\n                    </div>\n                    <div style=\"transform: rotate(-30deg)\" class=\"absolute top-14 left-1/2 transform -translate-x-1/2\">\n                        <div class=\"w-40 h-1 bg-white\"></div>\n                        <div class=\"w-20 h-1 bg-white -ml-10\"></div>\n                    </div>\n                </div>\n                \n                <!-- Tape Scales -->\n                <div class=\"grid grid-cols-3 gap-2\">\n                    <!-- Airspeed Tape -->\n                    <div class=\"relative\">\n                        <div class=\"text-center mb-2\">A/S 250</div>\n                        <div class=\"tape-scale h-32\">\n                            <div class=\"flex flex-col justify-between h-full\">\n                                <div>260</div><div>240</div><div>220</div><div>200</div><div>180</div>\n                            </div>\n                        </div>\n                    </div>\n                    <!-- Altitude Tape -->\n                    <div class=\"relative\">\n                        <div class=\"text-center mb-2\">FL 350</div>\n                        <div class=\"tape-scale h-32\">\n                            <div class=\"flex flex-col justify-between h-full\">\n                                <div>36.0</div><div>35.0</div><div>34.0</div><div>33.0</div><div>32.0</div>\n                            </div>\n                        </div>\n                    </div>\n                    <!-- VSI Tape -->\n                    <div class=\"relative\">\n                        <div class=\"text-center mb-2\">VSI 0</div>\n                        <div class=\"tape-scale h-32\">\n                            <div class=\"flex flex-col justify-between h-full\">\n                                <div>2.0</div><div>1.0</div><div>0</div><div>-1.0</div><div>-2.0</div>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n            \n            <!-- Navigation Display -->\n            <div class=\"glass-panel rounded-2xl p-6 h-144\">\n                <h2 class=\"text-xl font-bold mb-4\">Navigation Display</h2>\n                <div class=\"nav-display rounded-2xl h-80 relative overflow-hidden\">\n                    <!-- Aircraft symbol -->\n                    <div class=\"absolute bottom-4 left-1/2 transform -translate-x-1/2\">\n                        <div class=\"w-4 h-4 border-2 border-white transform rotate-45\"></div>\n                    </div>\n                    <!-- Route -->\n                    <svg class=\"absolute inset-0 m-auto\" viewBox=\"0 0 300 300\">\n                        <circle cx=\"150\" cy=\"150\" r=\"1\" fill=\"green\" />\n                        <circle cx=\"100\" cy=\"200\" r=\"1\" fill=\"green\" />\n                        <circle cx=\"200\" cy=\"200\" r=\"1\" fill=\"green\" />\n                        <path d=\"M150 150 L100 200 L200 200\" stroke=\"lime\" stroke-width=\"1\" fill=\"none\" />\n                    </svg>\n                    <!-- Course line -->\n                    <div class=\"absolute top-20 left-1/2 w-20 border-r border-green-400\"></div>\n                    <div class=\"absolute top-40 left-1/2 w-40 border-r border-green-400\"></div>\n                </div>\n                <!-- Waypoints -->\n                <div class=\"grid grid-cols-2 gap-2 mt-2\">\n                    <div class=\"text-center\">WPT: BNA</div>\n                    <div class=\"text-center\">WPT: CHA</div>\n                </div>\n            </div>\n            \n            <!-- Engine Instruments -->\n            <div class=\"glass-panel rounded-2xl p-6 h-144\">\n                <h2 class=\"text-xl font-bold mb-4\">Engine Instruments</h2>\n                <div class=\"space-y-3\">\n                    <div class=\"flex justify-between items-center\">\n                        <span>N1</span>\n                        <div class=\"w-32 bg-gray-700 rounded-full h-3\">\n                            <div id=\"n1Gauge\" class=\"bg-red-500 h-3 rounded-full\" style=\"width: 80%;\"></div>\n                        </div>\n                        <span id=\"n1Value\">80%</span>\n                    </div>\n                    <div class=\"flex justify-between items-center\">\n                        <span>N2</span>\n                        <div class=\"w-32 bg-gray-700 rounded-full h-3\">\n                            <div id=\"n2Gauge\" class=\"bg-red-500 h-3 rounded-full\" style=\"width: 65%;\"></div>\n                        </div>\n                        <span id=\"n2Value\">65%</span>\n                    </div>\n                    <div class=\"flex justify-between items-center\">\n                        <span>Fuel</span>\n                        <div class=\"w-32 bg-gray-700 rounded-full h-3\">\n                            <div id=\"fuelGauge\" class=\"bg-blue-500 h-3 rounded-full\" style=\"width: 45%;\"></div>\n                        </div>\n                        <span id=\"fuelValue\">4500 lbs</span>\n                    </div>\n                    <div class=\"flex justify-between items-center\">\n                        <span>OIL</span>\n                        <div class=\"w-32 bg-gray-700 rounded-full h-3\">\n                            <div id=\"oilGauge\" class=\"bg-yellow-500 h-3 rounded-full\" style=\"width: 35%;\"></div>\n                        </div>\n                        <span id=\"oilValue\">50 psi</span>\n                    </div>\n                </div>\n            </div>\n        </div>\n        \n        <!-- Lower Panel -->\n        <div class=\"grid grid-cols-3 gap-4\">\n            <!-- Autopilot Panel -->\n            <div class=\"glass-panel rounded-2xl p-6\">\n                <h2 class=\"text-xl font-bold mb-4\">Autopilot</h2>\n                <div class=\"grid grid-cols-2 gap-2\">\n                    <button id=\"apButton\" class=\"w-full button-black py-2\">A/P</button>\n                    <button id=\"fdButton\" class=\"w-full button-black py-2\">F/D</button>\n                    <button id=\"altHoldButton\" class=\"w-full button-black py-2\">ALT HOLD</button>\n                    <button id=\"vsButton\" class=\"w-full button-black py-2\">V/S</button>\n                    <button id=\"lnavButton\" class=\"w-full button-black py-2\">LNAV</button>\n                    <button id=\"vsrButton\" class=\"w-full button-black py-2\">VSR</button>\n                </div>\n                <div class=\"mt-4\">\n                    <div class=\"flex justify-between items-center mb-2\">\n                        <span>ALT SEL</span>\n                        <input id=\"altSelect\" type=\"number\" class=\"bg-gray-800 text-white px-2 py-1 w-20\" value=\"350\">\n                    </div>\n                    <div class=\"flex justify-between items-center\">\n                        <span>VS</span>\n                        <input id=\"vsSelect\" type=\"number\" class=\"bg-gray-800 text-white px-2 py-1 w-20\" value=\"0\">\n                    </div>\n                </div>\n            </div>\n            \n            <!-- Radio Panel -->\n            <div class=\"glass-panel rounded-2xl p-6\">\n                <h2 class=\"text-xl font-bold mb-4\">Radio Panel</h2>\n                <div class=\"grid grid-cols-2 gap-4\">\n                    <div>\n                        <div class=\"text-center mb-2\">NAV1</div>\n                        <div class=\"bg-gray-800 p-3 text-2xl font-mono text-center\" id=\"nav1Freq\">117.20</div>\n                        <div class=\"grid grid-cols-4 gap-1 mt-2\">\n                            <button class=\"key w-10 h-10\">1</button>\n                            <button class=\"key w-10 h-10\">2</button>\n                            <button class=\"key w-10 h-10\">3</button>\n                            <button class=\"key w-10 h-10\">.</button>\n                            <button class=\"key w-10 h-10\">4</button>\n                            <button class=\"key w-10 h-10\">5</button>\n                            <button class=\"key w-10 h-10\">6</button>\n                            <button id=\"nav1Swap\" class=\"key w-10 h-10\">S</button>\n                            <button class=\"key w-10 h-10\">7</button>\n                            <button class=\"key w-10 h-10\">8</button>\n                            <button class=\"key w-10 h-10\">9</button>\n                            <button id=\"nav1Stby\" class=\"key w-10 h-10 text-yellow-400\">STBY</button>\n                            <button class=\"key w-10 h-10\">CLR</button>\n                            <button class=\"key w-10 h-10\">0</button>\n                            <button class=\"key w-10 h-10 text-red-400\">OFF</button>\n                        </div>\n                    </div>\n                    <div>\n                        <div class=\"text-center mb-2\">COM1</div>\n                        <div class=\"bg-gray-800 p-3 text-2xl font-mono text-center\" id=\"com1Freq\">118.00</div>\n                        <div class=\"grid grid-cols-4 gap-1 mt-2\">\n                            <button class=\"key w-10 h-10\">1</button>\n                            <button class=\"key w-10 h-10\">2</button>\n                            <button class=\"key w-10 h-10\">3</button>\n                            <button class=\"key w-10 h-10\">.</button>\n                            <button class=\"key w-10 h-10\">4</button>\n                            <button class=\"key w-10 h-10\">5</button>\n                            <button class=\"key w-10 h-10\">6</button>\n                            <button id=\"com1Swap\" class=\"key w-10 h-10\">S</button>\n                            <button class=\"key w-10 h-10\">7</button>\n                            <button class=\"key w-10 h-10\">8</button>\n                            <button class=\"key w-10 h-10\">9</button>\n                            <button id=\"com1Stby\" class=\"key w-10 h-10 text-yellow-400\">STBY</button>\n                            <button class=\"key w-10 h-10\">CLR</button>\n                            <button class=\"key w-10 h-10\">0</button>\n                            <button class=\"key w-10 h-10 text-red-400\">OFF</button>\n                        </div>\n                    </div>\n                </div>\n            </div>\n            \n            <!-- Warning & Annunciators -->\n            <div class=\"glass-panel rounded-2xl p-6 relative\">\n                <h2 class=\"text-xl font-bold mb-4\">Warning Panel</h2>\n                <div id=\"masterWarning\" class=\"bg-red-900 p-2 mb-4\">\n                    <input type=\"checkbox\" id=\"masterWarnCheckbox\" class=\"mr-2\">\n                    <label for=\"masterWarnCheckbox\" class=\"warning-text font-bold\">MASTER WARNING</label> <span id=\"masterWarningValue\" class=\"text-red-300\">OFF</span>\n                </div>\n                <div id=\"masterCaution\" class=\"bg-yellow-900 p-2 mb-4\">\n                    <input type=\"checkbox\" id=\"masterCautionCheckbox\" class=\"mr-2\">\n                    <label for=\"masterCautionCheckbox\" class=\"caution-text font-bold\">MASTER CAUTION</label> <span id=\"masterCautionValue\" class=\"text-yellow-300\">OFF</span>\n                </div>\n                <div id=\"fireWarn\" class=\"bg-red-900 p-2 mb-4\">\n                    <input type=\"checkbox\" id=\"fireWarnCheckbox\" class=\"mr-2\">\n                    <label for=\"fireWarnCheckbox\" class=\"warning-text font-bold\">FIRE WARNING</label> <span id=\"fireWarnValue\" class=\"text-red-300\">OFF</span>\n                </div>\n                <div id=\"stallWarn\" class=\"bg-red-900 p-2 mb-4\">\n                    <input type=\"checkbox\" id=\"stallWarnCheckbox\" class=\"mr-2\">\n                    <label for=\"stallWarnCheckbox\" class=\"warning-text font-bold\">STALL WARNING</label> <span id=\"stallWarnValue\" class=\"text-red-300\">OFF</span>\n                </div>\n                <div id=\"gearUnsafe\" class=\"bg-yellow-900 p-2 mb-4\">\n                    <input type=\"checkbox\" id=\"gearUnsafeCheckbox\" class=\"mr-2\">\n                    <label for=\"gearUnsafeCheckbox\" class=\"caution-text font-bold\">GEAR UNSAFE</label> <span id=\"gearUnsafeValue\" class=\"text-yellow-300\">OFF</span>\n                </div>\n            </div>\n        </div>\n        \n        <!-- FMS Route Panel -->\n        <div class=\"glass-panel rounded-2xl p-6\">\n            <h2 class=\"text-xl font-bold mb-4\">FMS ROUTE PLANNING</h2>\n            <div class=\"grid grid-cols-2 gap-4\">\n                <div class=\"space-y-3\">\n                    <input type=\"text\" id=\"fmsOrigin\" placeholder=\"ORIGIN\" class=\"bg-gray-800 text-white px-4 py-2 w-full\">\n                    <input type=\"text\" id=\"fmsDest\" placeholder=\"DESTINATION\" class=\"bg-gray-800 text-white px-4 py-2 w-full\">\n                    <input type=\"number\" id=\"fmsCruiseAlt\" placeholder=\"CRUISE ALT\" class=\"bg-gray-800 text-white px-4 py-2 w-full\">\n                    <input type=\"number\" id=\"fmsTAS\" placeholder=\"TAS\" class=\"bg-gray-800 text-white px-4 py-2 w-full\">\n                    <div id=\"routePreview\" class=\"bg-gray-800 p-4 text-sm font-mono\"></div>\n                </div>\n                <div class=\"space-y-4\">\n                    <div class=\"grid grid-cols-4 gap-1\">\n                        <button class=\"key w-16 h-12\">A</button>\n                        <button class=\"key w-16 h-12\">B</button>\n                        <button class=\"key w-16 h-12\">C</button>\n                        <button class=\"key w-16 h-12\">D</button>\n                        <button class=\"key w-16 h-12\">E</button>\n                        <button class=\"key w-16 h-12\">F</button>\n                        <button class=\"key w-16 h-12\">G</button>\n                        <button class=\"key w-16 h-12\">H</button>\n                        <button class=\"key w-16 h-12\">I</button>\n                        <button class=\"key w-16 h-12\">J</button>\n                        <button class=\"key w-16 h-12\">K</button>\n                        <button class=\"key w-16 h-12\">L</button>\n                        <button class=\"key w-16 h-12\">M</button>\n                        <button class=\"key w-16 h-12\">N</button>\n                        <button class=\"key w-16 h-12\">O</button>\n                        <button class=\"key w-16 h-12\">P</button>\n                        <button class=\"key w-16 h-12\">Q</button>\n                        <button class=\"key w-16 h-12\">R</button>\n                        <button class=\"key w-16 h-12\">S</button>\n                        <button class=\"key w-16 h-12\">T</button>\n                        <button class=\"key w-16 h-12\">U</button>\n                        <button class=\"key w-16 h-12\">V</button>\n                        <button class=\"key w-16 h-12\">W</button>\n                        <button class=\"key w-16 h-12\">X</button>\n                        <button class=\"key w-16 h-12\">Y</button>\n                        <button class=\"key w-16 h-12\">Z</button>\n                        <button class=\"key w-16 h-12\">CLR</button>\n                        <button class=\"key w-16 h-12\">ENTER</button>\n                    </div>\n                    <div class=\"grid grid-cols-6 gap-1\">\n                        <button class=\"key w-16 h-12\">1</button>\n                        <button class=\"key w-16 h-12\">2</button>\n                        <button class=\"key w-16 h-12\">3</button>\n                        <button class=\"key w-16 h-12\">4</button>\n                        <button class=\"key w-16 h-12\">5</button>\n                        <button class=\"key w-16 h-12\">6</button>\n                        <button class=\"key w-16 h-12\">7</button>\n                        <button class=\"key w-16 h-12\">8</button>\n                        <button class=\"key w-16 h-12\">9</button>\n                        <button class=\"key w-16 h-12\">0</button>\n                        <button class=\"key w-16 h-12\">.</button>\n                        <button class=\"key w-16 h-12\">-</button>\n                    </div>\n                </div>\n            </div>\n        </div>\n    </div>\n    \n    <script>\n        // Initialize Gauges\n        const tempCtx = document.getElementById('tempGauge').getContext('2d');\n        const aoaCtx = document.getElementById('aoaGauge').getContext('2d');\n        const tempGauge = new Chart(tempCtx, {\n            type: 'doughnut',\n            data: {\n                datasets: [{\n                    data: [70, 30],\n                    backgroundColor: ['#ef4444', '#374151'],\n                    borderWidth: 0\n                }]\n            },\n            options: {\n                responsive: false,\n                cutout: '80%',\n                plugins: {\n                    legend: { display: false }\n                }\n            }\n        });\n        const aoaGauge = new Chart(aoaCtx, {\n            type: 'doughnut',\n            data: {\n                datasets: [{\n                    data: [20, 80],\n                    backgroundColor: ['#10b981', '#374151'],\n                    borderWidth: 0\n                }]\n            },\n            options: {\n                responsive: false,\n                cutout: '80%',\n                plugins: {\n                    legend: { display: false }\n                }\n            }\n        });\n\n        // Update Engine Gauges\n        function updateEngineGauges() {\n            const n1 = Math.random() * 20 + 60;\n            const n2 = Math.random() * 20 + 50;\n            const fuel = Math.random() * 30 + 20;\n            const oil = Math.random() * 30 + 20;\n\n            document.getElementById('n1Gauge').style.width = n1 + '%';\n            document.getElementById('n2Gauge').style.width = n2 + '%';\n            document.getElementById('fuelGauge').style.width = fuel + '%';\n            document.getElementById('oilGauge').style.width = oil + '%';\n\n            document.getElementById('n1Value').textContent = Math.round(n1) + '%';\n            document.getElementById('n2Value').textContent = Math.round(n2) + '%';\n            document.getElementById('fuelValue').textContent = Math.round(fuel * 100) + ' lbs';\n            document.getElementById('oilValue').textContent = Math.round(oil * 10) + ' psi';\n        }\n        updateEngineGauges();\n        setInterval(updateEngineGauges, 2000);\n\n        // Warning System\n        const warnings = {\n            masterWarning: { el: 'masterWarningValue', isOn: false },\n            masterCaution: { el: 'masterCautionValue', isOn: false },\n            fireWarn: { el: 'fireWarnValue', isOn: false },\n            stallWarn: { el: 'stallWarnValue', isOn: false },\n            gearUnsafe: { el: 'gearUnsafeValue', isOn: false }\n        };\n\n        function updateWarningPanel(checkboxId, warnObj) {\n            const checkbox = document.getElementById(checkboxId);\n            const valueEl = document.getElementById(warnObj.el);\n            warnObj.isOn = checkbox.checked;\n            valueEl.textContent = warnObj.isOn ? 'ON' : 'OFF';\n            valueEl.parentElement.classList.toggle('annunciator-on', warnObj.isOn);\n            valueEl.parentElement.classList.toggle('annunciator-off', !warnObj.isOn);\n        }\n\n        // Radio Buttons\n        document.querySelectorAll('.key').forEach(btn => {\n            btn.addEventListener('click', function() {\n                if (this.textContent === \"CLR\") {\n                    this.parentElement.previousElementSibling.textContent = \"000.00\";\n                } else if (this.textContent === \"S\") {\n                    const current = this.parentElement.previousElementSibling.textContent;\n                    this.parentElement.previousElementSibling.textContent = \"STBY \" + current;\n                }\n            });\n        });\n\n        // FMS Route Planning\n        document.getElementById('fmsOrigin').addEventListener('input', updateRoutePreview);\n        document.getElementById('fmsDest').addEventListener('input', updateRoutePreview);\n        document.getElementById('fmsCruiseAlt').addEventListener('input', updateRoutePreview);\n        document.getElementById('fmsTAS').addEventListener('input', updateRoutePreview);\n\n        function updateRoutePreview() {\n            const origin = document.getElementById('fmsOrigin').value || 'XXX';\n            const dest = document.getElementById('fmsDest').value || 'XXX';\n            const alt = document.getElementById('fmsCruiseAlt').value || 'FL350';\n            const tas = document.getElementById('fmsTAS').value || '450';\n            document.getElementById('routePreview').innerHTML = `ROUTE: ${origin} → ${dest}<br>ALT: ${alt} TAS: ${tas}`;\n        }\n    </script>\n</body>\n</html>\n"
}