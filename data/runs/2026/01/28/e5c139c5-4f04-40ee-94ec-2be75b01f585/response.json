  "text": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Video Editor Pro</title>\n    <script src=\"https://cdn.tailwindcss.com\"></script>\n    <link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css\">\n    <style>\n        .timeline-track {\n            height: 60px;\n            position: relative;\n            overflow: hidden;\n        }\n        .timeline-clip {\n            position: absolute;\n            height: 100%;\n            border-radius: 4px;\n            cursor: pointer;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            color: white;\n            font-size: 12px;\n            font-weight: 500;\n            user-select: none;\n        }\n        .video-clip {\n            background: linear-gradient(90deg, #4f46e5, #6366f1);\n        }\n        .audio-clip {\n            background: linear-gradient(90deg, #10b981, #34d399);\n        }\n        .image-clip {\n            background: linear-gradient(90deg, #f59e0b, #fbbf24);\n        }\n        .timeline-playhead {\n            position: absolute;\n            top: 0;\n            bottom: 0;\n            width: 2px;\n            background-color: #ef4444;\n            z-index: 100;\n            pointer-events: none;\n        }\n        .waveform {\n            background-image: linear-gradient(to right, \n                transparent 45%, #10b981 45%, #10b981 55%, transparent 55%),\n                linear-gradient(to right, \n                transparent 30%, #10b981 30%, #10b981 70%, transparent 70%);\n            background-size: 4px 100%, 2px 100%;\n            background-position: 0 0, 0 0;\n            background-repeat: repeat-x;\n            opacity: 0.6;\n        }\n        .keyframe {\n            width: 10px;\n            height: 10px;\n            border-radius: 50%;\n            background-color: #f59e0b;\n            position: absolute;\n            top: 50%;\n            transform: translate(-50%, -50%);\n            cursor: pointer;\n            border: 2px solid white;\n        }\n        .dragging {\n            opacity: 0.7;\n            z-index: 1000;\n        }\n        .drop-zone {\n            border: 2px dashed #94a3b8;\n        }\n        .transition-effect {\n            position: absolute;\n            height: 100%;\n            width: 40px;\n            background: linear-gradient(90deg, transparent, #8b5cf6, transparent);\n            opacity: 0.7;\n        }\n    </style>\n</head>\n<body class=\"bg-gray-900 text-gray-100 h-screen flex flex-col overflow-hidden\">\n    <!-- Top Menu Bar -->\n    <header class=\"bg-gray-800 border-b border-gray-700 px-4 py-2 flex items-center justify-between\">\n        <div class=\"flex items-center space-x-4\">\n            <h1 class=\"text-xl font-bold text-blue-400\">Video Editor Pro</h1>\n            <nav class=\"hidden md:flex space-x-4\">\n                <button class=\"px-3 py-1 hover:bg-gray-700 rounded\">File</button>\n                <button class=\"px-3 py-1 hover:bg-gray-700 rounded\">Edit</button>\n                <button class=\"px-3 py-1 hover:bg-gray-700 rounded\">View</button>\n                <button class=\"px-3 py-1 hover:bg-gray-700 rounded\">Sequence</button>\n                <button class=\"px-3 py-1 hover:bg-gray-700 rounded\">Effects</button>\n            </nav>\n        </div>\n        <div class=\"flex items-center space-x-3\">\n            <button id=\"undoBtn\" class=\"p-2 hover:bg-gray-700 rounded\" title=\"Undo\">\n                <i class=\"fas fa-undo\"></i>\n            </button>\n            <button id=\"redoBtn\" class=\"p-2 hover:bg-gray-700 rounded\" title=\"Redo\">\n                <i class=\"fas fa-redo\"></i>\n            </button>\n            <button id=\"settingsBtn\" class=\"p-2 hover:bg-gray-700 rounded\" title=\"Settings\">\n                <i class=\"fas fa-cog\"></i>\n            </button>\n        </div>\n    </header>\n\n    <!-- Main Content Area -->\n    <div class=\"flex flex-1 overflow-hidden\">\n        <!-- Left Panel: Media Library -->\n        <aside class=\"w-64 bg-gray-800 border-r border-gray-700 flex flex-col\">\n            <div class=\"p-4 border-b border-gray-700\">\n                <h2 class=\"font-semibold text-lg mb-3\">Media Library</h2>\n                <div class=\"flex space-x-2 mb-3\">\n                    <button class=\"px-3 py-1 bg-blue-600 rounded text-sm\">All</button>\n                    <button class=\"px-3 py-1 bg-gray-700 rounded text-sm hover:bg-gray-600\">Video</button>\n                    <button class=\"px-3 py-1 bg-gray-700 rounded text-sm hover:bg-gray-600\">Audio</button>\n                    <button class=\"px-3 py-1 bg-gray-700 rounded text-sm hover:bg-gray-600\">Images</button>\n                </div>\n                <button class=\"w-full py-2 bg-gray-700 hover:bg-gray-600 rounded flex items-center justify-center\">\n                    <i class=\"fas fa-plus mr-2\"></i> Import Media\n                </button>\n            </div>\n            <div class=\"flex-1 overflow-y-auto p-2\">\n                <!-- Media Items -->\n                <div class=\"grid grid-cols-2 gap-2\">\n                    <div class=\"media-item bg-gray-700 rounded p-2 cursor-move hover:bg-gray-600\" draggable=\"true\" data-type=\"video\">\n                        <div class=\"aspect-video bg-gradient-to-br from-blue-600 to-purple-600 rounded mb-1\"></div>\n                        <p class=\"text-xs truncate\">Intro Clip.mp4</p>\n                        <p class=\"text-xs text-gray-400\">00:15</p>\n                    </div>\n                    <div class=\"media-item bg-gray-700 rounded p-2 cursor-move hover:bg-gray-600\" draggable=\"true\" data-type=\"video\">\n                        <div class=\"aspect-video bg-gradient-to-br from-green-600 to-teal-600 rounded mb-1\"></div>\n                        <p class=\"text-xs truncate\">Scene 1.mp4</p>\n                        <p class=\"text-xs text-gray-400\">01:23</p>\n                    </div>\n                    <div class=\"media-item bg-gray-700 rounded p-2 cursor-move hover:bg-gray-600\" draggable=\"true\" data-type=\"audio\">\n                        <div class=\"aspect-video bg-gradient-to-br from-yellow-600 to-orange-600 rounded mb-1\"></div>\n                        <p class=\"text-xs truncate\">Background.mp3</p>\n                        <p class=\"text-xs text-gray-400\">03:45</p>\n                    </div>\n                    <div class=\"media-item bg-gray-700 rounded p-2 cursor-move hover:bg-gray-600\" draggable=\"true\" data-type=\"image\">\n                        <div class=\"aspect-video bg-gradient-to-br from-pink-600 to-red-600 rounded mb-1\"></div>\n                        <p class=\"text-xs truncate\">Logo.png</p>\n                        <p class=\"text-xs text-gray-400\">1920x1080</p>\n                    </div>\n                </div>\n            </div>\n        </aside>\n\n        <!-- Center Area: Preview and Timeline -->\n        <main class=\"flex-1 flex flex-col\">\n            <!-- Preview Panel -->\n            <div class=\"bg-black relative\" style=\"height: 360px;\">\n                <div class=\"absolute inset-0 flex items-center justify-center\">\n                    <div class=\"relative\">\n                        <img src=\"https://picsum.photos/seed/preview/640/360.jpg\" alt=\"Preview\" class=\"max-h-[360px] max-w-full\">\n                        <div class=\"absolute inset-0 flex items-center justify-center\">\n                            <div class=\"bg-black bg-opacity-50 rounded-full p-4 cursor-pointer\" id=\"playBtn\">\n                                <i class=\"fas fa-play text-2xl\"></i>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n                <!-- Preview Controls -->\n                <div class=\"absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-4\">\n                    <div class=\"flex items-center space-x-3\">\n                        <button class=\"text-gray-300 hover:text-white\">\n                            <i class=\"fas fa-step-backward\"></i>\n                        </button>\n                        <button id=\"playPauseBtn\" class=\"bg-blue-600 hover:bg-blue-700 rounded-full w-10 h-10 flex items-center justify-center\">\n                            <i class=\"fas fa-play\"></i>\n                        </button>\n                        <button class=\"text-gray-300 hover:text-white\">\n                            <i class=\"fas fa-step-forward\"></i>\n                        </button>\n                        <div class=\"flex-1 bg-gray-700 h-2 rounded-full overflow-hidden\">\n                            <div class=\"bg-blue-500 h-full w-1/3\"></div>\n                        </div>\n                        <span class=\"text-sm\">00:45 / 02:30</span>\n                    </div>\n                </div>\n            </div>\n\n            <!-- Timeline -->\n            <div class=\"flex-1 bg-gray-800 flex flex-col\">\n                <div class=\"border-b border-gray-700 p-2 flex items-center justify-between\">\n                    <div class=\"flex items-center space-x-2\">\n                        <button class=\"px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded text-sm\">\n                            <i class=\"fas fa-plus mr-1\"></i> Add Track\n                        </button>\n                        <button class=\"px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded text-sm\">\n                            <i class=\"fas fa-scissors mr-1\"></i> Split\n                        </button>\n                        <button class=\"px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded text-sm\">\n                            <i class=\"fas fa-link mr-1\"></i> Link\n                        </button>\n                    </div>\n                    <div class=\"flex items-center space-x-2\">\n                        <button class=\"px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded text-sm\" id=\"zoomOutBtn\">\n                            <i class=\"fas fa-search-minus\"></i>\n                        </button>\n                        <span class=\"text-sm\">100%</span>\n                        <button class=\"px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded text-sm\" id=\"zoomInBtn\">\n                            <i class=\"fas fa-search-plus\"></i>\n                        </button>\n                    </div>\n                </div>\n\n                <!-- Timeline Ruler -->\n                <div class=\"bg-gray-900 border-b border-gray-700 h-8 relative flex items-center\">\n                    <div class=\"absolute inset-0 flex\">\n                        <div class=\"w-16 border-r border-gray-700\"></div>\n                        <div class=\"flex-1 flex\">\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:00</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:10</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:20</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:30</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:40</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">0:50</div>\n                            <div class=\"w-20 border-r border-gray-700 text-xs px-2\">1:00</div>\n                        </div>\n                    </div>\n                </div>\n\n                <!-- Tracks -->\n                <div class=\"flex-1 overflow-auto\">\n                    <div id=\"timeline\" class=\"relative min-h-[400px]\">\n                        <!-- Video Track 1 -->\n                        <div class=\"flex border-b border-gray-700\">\n                            <div class=\"w-16 bg-gray-900 p-2 flex items-center\">\n                                <span class=\"text-xs font-medium\">V1</span>\n                            </div>\n                            <div class=\"flex-1 timeline-track bg-gray-850\" data-track=\"video1\">\n                                <div class=\"timeline-clip video-clip\" style=\"left: 0px; width: 120px;\">\n                                    Intro Clip\n                                </div>\n                                <div class=\"timeline-clip video-clip\" style=\"left: 140px; width: 200px;\">\n                                    Scene 1\n                                </div>\n                                <div class=\"transition-effect\" style=\"left: 120px;\"></div>\n                            </div>\n                        </div>\n\n                        <!-- Video Track 2 -->\n                        <div class=\"flex border-b border-gray-700\">\n                            <div class=\"w-16 bg-gray-900 p-2 flex items-center\">\n                                <span class=\"text-xs font-medium\">V2</span>\n                            </div>\n                            <div class=\"flex-1 timeline-track bg-gray-850\" data-track=\"video2\">\n                            </div>\n                        </div>\n\n                        <!-- Audio Track 1 -->\n                        <div class=\"flex border-b border-gray-700\">\n                            <div class=\"w-16 bg-gray-900 p-2 flex items-center\">\n                                <span class=\"text-xs font-medium\">A1</span>\n                            </div>\n                            <div class=\"flex-1 timeline-track bg-gray-850 waveform\" data-track=\"audio1\">\n                                <div class=\"timeline-clip audio-clip\" style=\"left: 0px; width: 300px;\">\n                                    <i class=\"fas fa-music mr-1\"></i> Background\n                                </div>\n                                <div class=\"keyframe\" style=\"left: 50px;\"></div>\n                                <div class=\"keyframe\" style=\"left: 150px;\"></div>\n                                <div class=\"keyframe\" style=\"left: 250px;\"></div>\n                            </div>\n                        </div>\n\n                        <!-- Audio Track 2 -->\n                        <div class=\"flex border-b border-gray-700\">\n                            <div class=\"w-16 bg-gray-900 p-2 flex items-center\">\n                                <span class=\"text-xs font-medium\">A2</span>\n                            </div>\n                            <div class=\"flex-1 timeline-track bg-gray-850\" data-track=\"audio2\">\n                            </div>\n                        </div>\n\n                        <!-- Playhead -->\n                        <div class=\"timeline-playhead\" style=\"left: 180px;\"></div>\n                    </div>\n                </div>\n            </div>\n        </main>\n\n        <!-- Right Panel: Effects and Controls -->\n        <aside class=\"w-64 bg-gray-800 border-l border-gray-700 flex flex-col\">\n            <!-- Effects Tab -->\n            <div class=\"border-b border-gray-700\">\n                <div class=\"flex border-b border-gray-700\">\n                    <button class=\"flex-1 py-2 px-4 text-sm font-medium border-b-2 border-blue-500\" id=\"effectsTab\">Effects</button>\n                    <button class=\"flex-1 py-2 px-4 text-sm font-medium hover:bg-gray-750\" id=\"controlsTab\">Controls</button>\n                </div>\n            </div>\n\n            <!-- Effects Content -->\n            <div id=\"effectsContent\" class=\"flex-1 overflow-y-auto p-4\">\n                <div class=\"mb-4\">\n                    <h3 class=\"font-semibold mb-2\">Video Effects</h3>\n                    <div class=\"space-y-2\">\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-adjust mr-2 text-blue-400\"></i>\n                                <span>Brightness & Contrast</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-palette mr-2 text-purple-400\"></i>\n                                <span>Color Correction</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-filter mr-2 text-green-400\"></i>\n                                <span>Blur & Sharpen</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-crop mr-2 text-yellow-400\"></i>\n                                <span>Transform</span>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n\n                <div class=\"mb-4\">\n                    <h3 class=\"font-semibold mb-2\">Transitions</h3>\n                    <div class=\"space-y-2\">\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-arrow-right mr-2 text-blue-400\"></i>\n                                <span>Cross Fade</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-expand mr-2 text-purple-400\"></i>\n                                <span>Zoom</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-random mr-2 text-green-400\"></i>\n                                <span>Dissolve</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-star mr-2 text-yellow-400\"></i>\n                                <span>Wipe</span>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n\n                <div>\n                    <h3 class=\"font-semibold mb-2\">Audio Effects</h3>\n                    <div class=\"space-y-2\">\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-volume-up mr-2 text-blue-400\"></i>\n                                <span>Volume</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-equalizer mr-2 text-purple-400\"></i>\n                                <span>Equalizer</span>\n                            </div>\n                        </div>\n                        <div class=\"p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600\">\n                            <div class=\"flex items-center\">\n                                <i class=\"fas fa-wave-square mr-2 text-green-400\"></i>\n                                <span>Noise Reduction</span>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n\n            <!-- Controls Content -->\n            <div id=\"controlsContent\" class=\"flex-1 overflow-y-auto p-4 hidden\">\n                <div class=\"mb-4\">\n                    <h3 class=\"font-semibold mb-2\">Keyframe Controls</h3>\n                    <div class=\"bg-gray-700 rounded p-3\">\n                        <div class=\"flex items-center justify-between mb-3\">\n                            <span class=\"text-sm\">Position</span>\n                            <button class=\"text-xs bg-blue-600 px-2 py-1 rounded\">Add Keyframe</button>\n                        </div>\n                        <div class=\"space-y-2\">\n                            <div>\n                                <div class=\"flex justify-between text-xs mb-1\">\n                                    <span>X</span>\n                                    <span>320</span>\n                                </div>\n                                <input type=\"range\" min=\"0\" max=\"1920\" value=\"320\" class=\"w-full\">\n                            </div>\n                            <div>\n                                <div class=\"flex justify-between text-xs mb-1\">\n                                    <span>Y</span>\n                                    <span>180</span>\n                                </div>\n                                <input type=\"range\" min=\"0\" max=\"1080\" value=\"180\" class=\"w-full\">\n                            </div>\n                        </div>\n                    </div>\n                </div>\n\n                <div class=\"mb-4\">\n                    <h3 class=\"font-semibold mb-2\">Transform</h3>\n                    <div class=\"bg-gray-700 rounded p-3 space-y-3\">\n                        <div>\n                            <div class=\"flex justify-between text-xs mb-1\">\n                                <span>Scale</span>\n                                <span>100%</span>\n                            </div>\n                            <input type=\"range\" min=\"0\" max=\"200\" value=\"100\" class=\"w-full\">\n                        </div>\n                        <div>\n                            <div class=\"flex justify-between text-xs mb-1\">\n                                <span>Rotation</span>\n                                <span>0°</span>\n                            </div>\n                            <input type=\"range\" min=\"-180\" max=\"180\" value=\"0\" class=\"w-full\">\n                        </div>\n                        <div>\n                            <div class=\"flex justify-between text-xs mb-1\">\n                                <span>Opacity</span>\n                                <span>100%</span>\n                            </div>\n                            <input type=\"range\" min=\"0\" max=\"100\" value=\"100\" class=\"w-full\">\n                        </div>\n                    </div>\n                </div>\n\n                <div>\n                    <h3 class=\"font-semibold mb-2\">Motion Path</h3>\n                    <div class=\"bg-gray-900 h-32 rounded flex items-center justify-center relative\">\n                        <div class=\"absolute inset-4 border border-gray-700 rounded\"></div>\n                        <div class=\"absolute w-3 h-3 bg-blue-500 rounded-full\" style=\"top: 20%; left: 20%;\"></div>\n                        <div class=\"absolute w-3 h-3 bg-blue-500 rounded-full\" style=\"top: 50%; left: 50%;\"></div>\n                        <div class=\"absolute w-3 h-3 bg-blue-500 rounded-full\" style=\"top: 30%; left: 80%;\"></div>\n                        <svg class=\"absolute inset-0\">\n                            <path d=\"M30,100 Q80,50 200,70\" stroke=\"#3b82f6\" stroke-width=\"2\" fill=\"none\"/>\n                        </svg>\n                    </div>\n                </div>\n            </div>\n        </aside>\n    </div>\n\n    <!-- Bottom Export Bar -->\n    <div class=\"bg-gray-800 border-t border-gray-700 px-4 py-2 flex items-center justify-between\">\n        <div class=\"flex items-center space-x-2\">\n            <span class=\"text-sm text-gray-400\">Duration:</span>\n            <span class=\"text-sm\">02:30:15</span>\n            <span class=\"text-sm text-gray-400 ml-4\">Resolution:</span>\n            <select class=\"bg-gray-700 text-sm rounded px-2 py-1\">\n                <option>1920x1080 (Full HD)</option>\n                <option>1280x720 (HD)</option>\n                <option>3840x2160 (4K)</option>\n            </select>\n        </div>\n        <div class=\"flex items-center space-x-2\">\n            <button class=\"px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded\">\n                <i class=\"fas fa-save mr-2\"></i>Save Project\n            </button>\n            <button id=\"exportBtn\" class=\"px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded\">\n                <i class=\"fas fa-file-export mr-2\"></i>Export\n            </button>\n        </div>\n    </div>\n\n    <!-- Export Modal -->\n    <div id=\"exportModal\" class=\"fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center hidden z-50\">\n        <div class=\"bg-gray-800 rounded-lg w-full max-w-md p-6\">\n            <h2 class=\"text-xl font-bold mb-4\">Export Settings</h2>\n            \n            <div class=\"mb-4\">\n                <label class=\"block text-sm font-medium mb-1\">Format</label>\n                <select class=\"w-full bg-gray-700 rounded px-3 py-2\">\n                    <option>MP4 (H.264)</option>\n                    <option>MOV (ProRes)</option>\n                    <option>AVI</option>\n                    <option>WebM</option>\n                </select>\n            </div>\n            \n            <div class=\"mb-4\">\n                <label class=\"block text-sm font-medium mb-1\">Resolution</label>\n                <select class=\"w-full bg-gray-700 rounded px-3 py-2\">\n                    <option>1920x1080 (1080p)</option>\n                    <option>1280x720 (720p)</option>\n                    <option>3840x2160 (4K)</option>\n                    <option>Custom</option>\n                </select>\n            </div>\n            \n            <div class=\"mb-4\">\n                <label class=\"block text-sm font-medium mb-1\">Quality</label>\n                <div class=\"flex space-x-2\">\n                    <button class=\"flex-1 py-2 bg-gray-700 hover:bg-gray-600 rounded\">Low</button>\n                    <button class=\"flex-1 py-2 bg-blue-600 rounded\">Medium</button>\n                    <button class=\"flex-1 py-2 bg-gray-700 hover:bg-gray-600 rounded\">High</button>\n                </div>\n            </div>\n            \n            <div class=\"mb-6\">\n                <label class=\"block text-sm font-medium mb-1\">Output Location</label>\n                <div class=\"flex\">\n                    <input type=\"text\" value=\"/exports/video_001.mp4\" class=\"flex-1 bg-gray-700 rounded-l px-3 py-2\">\n                    <button class=\"bg-gray-700 px-3 rounded-r hover:bg-gray-600\">\n                        <i class=\"fas fa-folder\"></i>\n                    </button>\n                </div>\n            </div>\n            \n            <div class=\"flex justify-end space-x-3\">\n                <button id=\"cancelExportBtn\" class=\"px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded\">Cancel</button>\n                <button id=\"confirmExportBtn\" class=\"px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded\">Export</button>\n            </div>\n        </div>\n    </div>\n\n    <script>\n        // Timeline drag and drop functionality\n        let draggedElement = null;\n        let playheadPosition = 180; // Starting position in pixels\n\n        // Handle drag start from media library\n        document.querySelectorAll('.media-item').forEach(item => {\n            item.addEventListener('dragstart', (e) => {\n                draggedElement = e.target;\n                e.target.classList.add('dragging');\n                e.dataTransfer.effectAllowed = 'copy';\n            });\n\n            item.addEventListener('dragend', (e) => {\n                e.target.classList.remove('dragging');\n            });\n        });\n\n        // Handle drop on timeline tracks\n        document.querySelectorAll('.timeline-track').forEach(track => {\n            track.addEventListener('dragover', (e) => {\n                e.preventDefault();\n                track.classList.add('drop-zone');\n            });\n\n            track.addEventListener('dragleave', () => {\n                track.classList.remove('drop-zone');\n            });\n\n            track.addEventListener('drop', (e) => {\n                e.preventDefault();\n                track.classList.remove('drop-zone');\n                \n                if (draggedElement) {\n                    const rect = track.getBoundingClientRect();\n                    const position = e.clientX - rect.left;\n                    const mediaType = draggedElement.dataset.type;\n                    const mediaName = draggedElement.querySelector('p').textContent;\n                    \n                    // Create new clip\n                    const clip = document.createElement('div');\n                    clip.className = `timeline-clip ${mediaType}-clip`;\n                    clip.style.left = `${position}px`;\n                    clip.style.width = '100px';\n                    clip.textContent = mediaName;\n                    \n                    track.appendChild(clip);\n                    \n                    // Add drag functionality to the new clip\n                    makeClipDraggable(clip);\n                }\n            });\n        });\n\n        // Make clips draggable within timeline\n        function makeClipDraggable(clip) {\n            let isDragging = false;\n            let startX = 0;\n            let startLeft = 0;\n\n            clip.addEventListener('mousedown', (e) => {\n                isDragging = true;\n                startX = e.clientX;\n                startLeft = parseInt(clip.style.left, 10);\n                clip.style.cursor = 'grabbing';\n                document.addEventListener('mousemove', onMouseMove);\n                document.addEventListener('mouseup', onMouseUp);\n            });\n\n            function onMouseMove(e) {\n                if (!isDragging) return;\n                const dx = e.clientX - startX;\n                clip.style.left = `${startLeft + dx}px`;\n            }\n\n            function onMouseUp() {\n                isDragging = false;\n                clip.style.cursor = 'pointer';\n                document.removeEventListener('mousemove', onMouseMove);\n                document.removeEventListener('mouseup', onMouseUp);\n            }\n        }\n\n        // Make existing clips draggable\n        document.querySelectorAll('.timeline-clip').forEach(clip => {\n            makeClipDraggable(clip);\n        });\n\n        // Playhead functionality\n        const timeline = document.getElementById('timeline');\n        const playhead = timeline.querySelector('.timeline-playhead');\n        \n        timeline.addEventListener('click', (e) => {\n            const rect = timeline.getBoundingClientRect();\n            playheadPosition = e.clientX - rect.left;\n            playhead.style.left = `${playheadPosition}px`;\n        });\n\n        // Play/Pause button\n        const playPauseBtn = document.getElementById('playPauseBtn');\n        const playIcon = playPauseBtn.querySelector('i');\n        let isPlaying = false;\n\n        playPauseBtn.addEventListener('click', () => {\n            isPlaying = !isPlaying;\n            playIcon.className = isPlaying ? 'fas fa-pause' : 'fas fa-play';\n        });\n\n        // Zoom controls\n        const zoomInBtn = document.getElementById('zoomInBtn');\n        const zoomOutBtn = document.getElementById('zoomOutBtn');\n        let zoomLevel = 100;\n\n        zoomInBtn.addEventListener('click', () => {\n            if (zoomLevel < 200) {\n                zoomLevel += 10;\n                updateZoom();\n            }\n        });\n\n        zoomOutBtn.addEventListener('click', () => {\n            if (zoomLevel > 50) {\n                zoomLevel -= 10;\n                updateZoom();\n            }\n        });\n\n        function updateZoom() {\n            document.querySelector('#zoomInBtn').nextElementSibling.textContent = `${zoomLevel}%`;\n            // In a real editor, this would scale the timeline\n        }\n\n        // Tab switching\n        const effectsTab = document.getElementById('effectsTab');\n        const controlsTab = document.getElementById('controlsTab');\n        const effectsContent = document.getElementById('effectsContent');\n        const controlsContent = document.getElementById('controlsContent');\n\n        effectsTab.addEventListener('click', () => {\n            effectsTab.classList.add('border-b-2', 'border-blue-500');\n            controlsTab.classList.remove('border-b-2', 'border-blue-500');\n            effectsContent.classList.remove('hidden');\n            controlsContent.classList.add('hidden');\n        });\n\n        controlsTab.addEventListener('click', () => {\n            controlsTab.classList.add('border-b-2', 'border-blue-500');\n            effectsTab.classList.remove('border-b-2', 'border-blue-500');\n            controlsContent.classList.remove('hidden');\n            effectsContent.classList.add('hidden');\n        });\n\n        // Export modal\n        const exportBtn = document.getElementById('exportBtn');\n        const exportModal = document.getElementById('exportModal');\n        const cancelExportBtn = document.getElementById('cancelExportBtn');\n        const confirmExportBtn = document.getElementById('confirmExportBtn');\n\n        exportBtn.addEventListener('click', () => {\n            exportModal.classList.remove('hidden');\n        });\n\n        cancelExportBtn.addEventListener('click', () => {\n            exportModal.classList.add('hidden');\n        });\n\n        confirmExportBtn.addEventListener('click', () => {\n            // In a real app, this would start the export process\n            exportModal.classList.add('hidden');\n            \n            // Show a notification\n            const notification = document.createElement('div');\n            notification.className = 'fixed bottom-4 right-4 bg-green-600 text-white px-4 py-2 rounded shadow-lg';\n            notification.textContent = 'Export started...';\n            document.body.appendChild(notification);\n            \n            setTimeout(() => {\n                notification.remove();\n            }, 3000);\n        });\n\n        // Keyframe interaction\n        document.querySelectorAll('.keyframe').forEach(keyframe => {\n            keyframe.addEventListener('click', (e) => {\n                e.stopPropagation();\n                // In a real editor, this would open keyframe controls\n            });\n        });\n\n        // Sliders\n        document.querySelectorAll('input[type=\"range\"]').forEach(slider => {\n            slider.addEventListener('input', (e) => {\n                const value = e.target.value;\n                const label = e.target.parentElement.querySelector('span:last-child');\n                if (label) {\n                    if (e.target.parentElement.previousElementSibling && e.target.parentElement.previousElementSibling.textContent.includes('Rotation')) {\n                        label.textContent = `${value}°`;\n                    } else if (e.target.parentElement.previousElementSibling && e.target.parentElement.previousElementSibling.textContent.includes('Scale')) {\n                        label.textContent = `${value}%`;\n                    } else if (e.target.parentElement.previousElementSibling && e.target.parentElement.previousElementSibling.textContent.includes('Opacity')) {\n                        label.textContent = `${value}%`;\n                    } else {\n                        label.textContent = value;\n                    }\n                }\n            });\n        });\n\n        // Undo/Redo\n        document.getElementById('undoBtn').addEventListener('click', () => {\n            // In a real app, this would undo the last action\n        });\n\n        document.getElementById('redoBtn').addEventListener('click', () => {\n            // In a real app, this would redo the last undone action\n        });\n    </script>\n</body>\n</html>"
